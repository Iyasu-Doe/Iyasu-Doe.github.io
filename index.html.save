</head>
<body>
<div id="videowrappper">
<video width="320" height="240" id="v" controls>
<source src="video.mp4" type="video/mp4" controls>
Your browser sucks, it does not support video.</video>
</div>
<div id="gifwrapper">
<video width="320" height="240">
<source src="" type="heman.gif">
</video>
</div>
<script>
var v = $('#v');
       $(v).on('canplay', function(){
          $(v).mouseenter(function(){
             $(this).get(0).play();
          }).mouseleave(function(){
             $(this).get(0).pause();
          })
       });
var gif = $(".video");
gifhover( hoverVideo, hideVideo );

function hoverVideo(e) {  
    $('video', this).get(0).play(); 
}

function hideVideo(e) {
    $('video', this).get(0).pause(); 
}

</script>
</body>
</html>
